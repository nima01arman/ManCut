<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="انتخاب تاریخ" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تاریخ انتخاب نشده"
        android:paddingVertical="8dp"/>

    <Button
        android:id="@+id/btnStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="انتخاب ساعت شروع" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ساعت شروع انتخاب نشده"
        android:paddingVertical="8dp"/>

    <Button
        android:id="@+id/btnEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="انتخاب ساعت پایان" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ساعت پایان انتخاب نشده"
        android:paddingVertical="8dp"/>

    <Button
        android:id="@+id/btnAddSlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="افزودن نوبت"
        android:layout_marginTop="24dp"/>
</LinearLayout>
